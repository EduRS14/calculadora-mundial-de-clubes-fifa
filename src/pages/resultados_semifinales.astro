<script>
    
    import type { EquipoParticipante } from "./../data/interfaz";
    import type { Partido } from "./../data/partido";

    const partidosSemifinalesLS = localStorage.getItem("partidosSemifinales");
    const partidosSemifinales = partidosSemifinalesLS ? JSON.parse(partidosSemifinalesLS) : [];

    let clasificadosFinal: (EquipoParticipante | null)[];

    let clasificadosFinalLS = localStorage.getItem("clasificadosFinal");
    if (clasificadosFinalLS) {
        clasificadosFinal = JSON.parse(clasificadosFinalLS);
    } else {
        clasificadosFinal = Array(2).fill(null);
    }

    const btnGuardarResultados = document.getElementById("guardarResultados");
    const btnReiniciarDatos = document.getElementById("reiniciarDatos");
    const btnSiguienteFase = document.getElementById("siguienteFase");

    const todosLosClasificados = () => {
        if (clasificadosFinal.every(equipo => equipo !== null)) {
            (btnSiguienteFase as HTMLButtonElement).disabled = false;
        } else {
            (btnSiguienteFase as HTMLButtonElement).disabled = true;
        }


    }

    const reiniciarDatos = () => {

        for (let i = 0; i < partidosSemifinales.length; i++) {
            const partido = partidosSemifinales[i];
            partido.jugado = false;
            partido.golesEquipo1 = -1;
            partido.golesEquipo2 = -1;
            partido.penalesEquipo1 = -1;
            partido.penalesEquipo2 = -1;
        }

        localStorage.setItem("partidosSemifinales", JSON.stringify(partidosSemifinales));
        localStorage.removeItem("clasificadosFinal");
        localStorage.removeItem("partidoFinal");
        localStorage.removeItem("ganadorTorneo");
        window.location.reload();
    }

    const guardarResultados = () => {
        for(let i = 0; i < partidosSemifinales.length; i++) {
            const partido = partidosSemifinales[i];
            const golesEquipo1 = document.getElementById(`golesEquipo1Partido_${i}`);
            const golesEquipo2 = document.getElementById(`golesEquipo2Partido_${i}`);
            const penalesEquipo1 = document.getElementById(`penalesEquipo1Partido_${i}`);
            const penalesEquipo2 = document.getElementById(`penalesEquipo2Partido_${i}`);

            if (golesEquipo1 && golesEquipo2 && (golesEquipo1 as HTMLInputElement).value !== '' && (golesEquipo2 as HTMLInputElement).value !== '') {
                partido.jugado = true;

                if (golesEquipo1 && golesEquipo2) {
                    partido.golesEquipo1 = Number((golesEquipo1 as HTMLInputElement).value);
                    partido.golesEquipo2 = Number((golesEquipo2 as HTMLInputElement).value);
                }
                if (penalesEquipo1 && penalesEquipo2 && (penalesEquipo1 as HTMLInputElement).value !== '' && (penalesEquipo2 as HTMLInputElement).value !== '') {
                    partido.penalesEquipo1 = Number((penalesEquipo1 as HTMLInputElement).value);
                    partido.penalesEquipo2 = Number((penalesEquipo2 as HTMLInputElement).value);
                } else {
                    partido.penalesEquipo1 = -1;
                    partido.penalesEquipo2 = -1;
                }

            } else {
                partido.jugado = false;
                partido.golesEquipo1 = -1;
                partido.golesEquipo2 = -1;
                partido.penalesEquipo1 = -1;
                partido.penalesEquipo2 = -1;
            }

            completarEquiposGanadores(partido, i);

        }

        let partidosSemifinalesLS_Aux = localStorage.getItem("partidosSemifinales")
        if (partidosSemifinalesLS_Aux) {
            const partidosSemifinalesAux = JSON.parse(partidosSemifinalesLS_Aux);

            if (JSON.stringify(partidosSemifinalesAux) !== JSON.stringify(partidosSemifinales)) {
                localStorage.setItem("partidosSemifinales", JSON.stringify(partidosSemifinales));
                localStorage.removeItem("clasificadosFinal");
                localStorage.removeItem("partidoFinal");
                localStorage.removeItem("ganadorTorneo");
            }

        } else {
            localStorage.setItem("partidosSemifinales", JSON.stringify(partidosSemifinales));
            localStorage.removeItem("clasificadosFinal");
            localStorage.removeItem("partidoFinal");
            localStorage.removeItem("ganadorTorneo");
        }

        todosLosClasificados();

    }

    const completarEquiposGanadores = (partido: Partido, index: number) => {
        const escudoGanador = document.getElementById(`escudoGanadorPartido_${index}`);
        const nombreGanador = document.getElementById(`nombreGanadorPartido_${index}`);

        if (partido.jugado || (partido.golesEquipo1 != -1 && partido.golesEquipo2 != -1)) {
            partidosSemifinales[index].jugado = true;

            let partidosSemifinalesLS_Aux = localStorage.getItem("partidosSemifinales");
            if (partidosSemifinalesLS_Aux) {
                const partidosSemifinalesAux = JSON.parse(partidosSemifinalesLS_Aux);

                if (JSON.stringify(partidosSemifinalesAux) !== JSON.stringify(partidosSemifinales)) {
                    localStorage.setItem("partidosSemifinales", JSON.stringify(partidosSemifinales));
                    localStorage.removeItem("clasificadosFinal");
                    localStorage.removeItem("partidoFinal");
                    localStorage.removeItem("ganadorTorneo");
                }

            } else {
                localStorage.setItem("partidosSemifinales", JSON.stringify(partidosSemifinales));
                localStorage.removeItem("clasificadosFinal");
                localStorage.removeItem("partidoFinal");
                localStorage.removeItem("ganadorTorneo");
            }

            if (partido.golesEquipo1 > partido.golesEquipo2) {
                (escudoGanador as HTMLImageElement).src = partido.equipo1.img;
                (nombreGanador as HTMLSpanElement).textContent = partido.equipo1.nombre;
                clasificadosFinal[index] = partido.equipo1;
            } else if (partido.golesEquipo2 > partido.golesEquipo1) {
                (escudoGanador as HTMLImageElement).src = partido.equipo2.img;
                (nombreGanador as HTMLSpanElement).textContent = partido.equipo2.nombre;
                clasificadosFinal[index] = partido.equipo2;
            } else {
                if (partido.penalesEquipo1 > partido.penalesEquipo2) {
                    (escudoGanador as HTMLImageElement).src = partido.equipo1.img;
                    (nombreGanador as HTMLSpanElement).textContent = partido.equipo1.nombre;
                    clasificadosFinal[index] = partido.equipo1;
                } else if (partido.penalesEquipo2 > partido.penalesEquipo1) {
                    (escudoGanador as HTMLImageElement).src = partido.equipo2.img;
                    (nombreGanador as HTMLSpanElement).textContent = partido.equipo2.nombre;
                    clasificadosFinal[index] = partido.equipo2;
                }
            }
        } else {
            (escudoGanador as HTMLImageElement).src = 'https://cdn-icons-png.flaticon.com/512/451/451727.png';
            (nombreGanador as HTMLSpanElement).textContent = 'Pendiente';
            clasificadosFinal[index] = null;
        }

        const clasificadosFinalLS_Aux = localStorage.getItem("clasificadosFinal");
        if (clasificadosFinalLS_Aux) {
            const clasificadosFinalAux = JSON.parse(clasificadosFinalLS_Aux);

            if (JSON.stringify(clasificadosFinalAux) !== JSON.stringify(clasificadosFinal)) {
                localStorage.setItem("clasificadosFinal", JSON.stringify(clasificadosFinal));
                localStorage.removeItem("partidosFinal");
                localStorage.removeItem("ganadorTorneo");
            }

        } else {
            localStorage.setItem("clasificadosFinal", JSON.stringify(clasificadosFinal));
            localStorage.removeItem("partidosFinal");
            localStorage.removeItem("ganadorTorneo");
        }
    }

    const actualizarTamanoTextoEquiposPartidos = () => {
        const esPantallaGrande = window.innerWidth > 992;
        const texto = (equipo: any) => esPantallaGrande ? equipo.nombre : equipo.diminutivo;
        partidosSemifinales.forEach((partido, index) => {
            const nombreEquipo1 = document.getElementById(`nombreEquipo1Partido_${index}`);
            const nombreEquipo2 = document.getElementById(`nombreEquipo2Partido_${index}`);
            if (partido) {
                (nombreEquipo1 as HTMLSpanElement).textContent = texto(partido.equipo1);
                (nombreEquipo2 as HTMLSpanElement).textContent = texto(partido.equipo2);
            }
        });
    };

    window.addEventListener("resize", actualizarTamanoTextoEquiposPartidos);

    const validarEstadoPartido = (index: number) => {
        const goles1 = document.getElementById(`golesEquipo1Partido_${index}`) as HTMLInputElement;
        const goles2 = document.getElementById(`golesEquipo2Partido_${index}`) as HTMLInputElement;
        const penales1 = document.getElementById(`penalesEquipo1Partido_${index}`) as HTMLInputElement;
        const penales2 = document.getElementById(`penalesEquipo2Partido_${index}`) as HTMLInputElement;

        const g1 = goles1.value !== '' ? Number(goles1.value) : null;
        const g2 = goles2.value !== '' ? Number(goles2.value) : null;
        const p1 = penales1.value !== '' ? Number(penales1.value) : null;
        const p2 = penales2.value !== '' ? Number(penales2.value) : null;

        (btnGuardarResultados as HTMLButtonElement).disabled = true;

        if (g1 === null && g2 === null){
            (btnGuardarResultados as HTMLButtonElement).disabled = false;
        }

        if (g1 === null || g2 === null) return;

        if (g1 === g2) {
            penales1.disabled = false;
            penales2.disabled = false;

            if (p1 !== null && p2 !== null) {
                if (p1 === p2) {
                    alert("No puedes dejar el partido empatado en penales.");
                    return;
                }
                (btnGuardarResultados as HTMLButtonElement).disabled = false;
            }
        } else {
            penales1.disabled = true;
            penales2.disabled = true;
            penales1.value = '';
            penales2.value = '';
            (btnGuardarResultados as HTMLButtonElement).disabled = false;
        }
    }

    partidosSemifinales.forEach((partido, index) => {
        const escudoEquipo1 = document.getElementById(`escudoEquipo1Partido_${index}`);
        const nombreEquipo1 = document.getElementById(`nombreEquipo1Partido_${index}`);
        const escudoEquipo2 = document.getElementById(`escudoEquipo2Partido_${index}`);
        const nombreEquipo2 = document.getElementById(`nombreEquipo2Partido_${index}`);
        const golesEquipo1 = document.getElementById(`golesEquipo1Partido_${index}`);
        const golesEquipo2 = document.getElementById(`golesEquipo2Partido_${index}`);
        const penalesEquipo1 = document.getElementById(`penalesEquipo1Partido_${index}`);
        const penalesEquipo2 = document.getElementById(`penalesEquipo2Partido_${index}`);

        if (partido) {
            (escudoEquipo1 as HTMLImageElement).src = partido.equipo1.img;
            (nombreEquipo1 as HTMLSpanElement).textContent = partido.equipo1.nombre;
            (escudoEquipo2 as HTMLImageElement).src = partido.equipo2.img;
            (nombreEquipo2 as HTMLSpanElement).textContent = partido.equipo2.nombre;
            (golesEquipo1 as HTMLInputElement).value = partido.golesEquipo1 != -1 ? partido.golesEquipo1 || '0' : '';
            (golesEquipo2 as HTMLInputElement).value = partido.golesEquipo2 != -1 ? partido.golesEquipo2 || '0' : '';
            (penalesEquipo1 as HTMLInputElement).value = partido.penalesEquipo1 != -1 ? partido.penalesEquipo1 || '0' : '';
            (penalesEquipo2 as HTMLInputElement).value = partido.penalesEquipo2 != -1 ? partido.penalesEquipo2 || '0' : '';

            if (partido.golesEquipo1 != -1 && partido.golesEquipo2 != -1 && partido.golesEquipo1 === partido.golesEquipo2) {
                (penalesEquipo1 as HTMLInputElement).disabled = false;
                (penalesEquipo2 as HTMLInputElement).disabled = false;
            } else {
                (penalesEquipo1 as HTMLInputElement).disabled = true;
                (penalesEquipo2 as HTMLInputElement).disabled = true;
            }

        }

        golesEquipo1?.addEventListener('change', () => validarEstadoPartido(index));
        golesEquipo2?.addEventListener('change', () => validarEstadoPartido(index));
        penalesEquipo1?.addEventListener('change', () => validarEstadoPartido(index));
        penalesEquipo2?.addEventListener('change', () => validarEstadoPartido(index));

        completarEquiposGanadores(partido, index);

        todosLosClasificados();

        (btnGuardarResultados as HTMLButtonElement).addEventListener("click", () => {
            guardarResultados();
        });

        btnReiniciarDatos?.addEventListener("click", () => {
            reiniciarDatos();
        });

        btnSiguienteFase?.addEventListener("click", () => {
            window.location.href = "/partido_final";
        });

    });

    actualizarTamanoTextoEquiposPartidos();

</script>

