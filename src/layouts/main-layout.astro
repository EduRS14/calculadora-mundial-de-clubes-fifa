---
import Footer from '../components/Footer.astro';


interface Props {
    titulo: string;
}

const {titulo} = Astro.props;


---

<!DOCTYPE html>
<html lang="es-PE">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<title>{titulo}</title>
</head>
<body>
	
    <slot/>
	
	<Footer></Footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

<style is:global>

    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');

	@keyframes scale-up-center {
	  0% {
	    transform: scale(0.5);
	  }
	  100% {
	    transform: scale(1);
	  }
	}

	@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

	@keyframes fadeOut {
        from {
            opacity: 1;
        }
        to {
            opacity: 0;
        }
    }

    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    body{
        height: 100vh;
        background: #000000;
		background: radial-gradient(circle,rgba(0, 0, 0, 1) 0%, rgba(22, 20, 10, 1) 59%, rgba(15, 12, 7, 1) 100%);
        overflow: hidden;
    }

	.titulo-grupo{
        width: auto;
        z-index: 2;
        font-size: 1.5rem;
        color: #DFB258;
        text-shadow: 
            -1px -1px 2px rgba(198,169,116, 0.4), 
            1px 1px 2px rgba(198,169,116, 0.4);
    }

    .texto-general{
        color: white;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
    }

    .btn-comenzar{
		text-decoration: none;
		width: auto;
		padding-top: 2%;
		padding-bottom: 1.6%;
		padding-left: 5%;
		padding-right: 5%;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
		font-size: 2rem;
		background-color: #514d35;
		background-size: 100%;
		color: white;
		border-radius: 24px;
		border: 8px solid #322c0f;
		transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
	}

    .btn-fechas{
		width: 40%;
		padding: 2%;
		padding-top: 0.5rem;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
		font-size: 0.8rem;
		background-color: #514d35;
		background-size: 100%;
		color: white;
		border-radius: 10px;
		border: 4px solid #322c0f;
		transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
	}

    .btn-fechas:hover{
		background-color: rgb(38, 36, 24);
        border: 4px solid #322c0f;
		color: white;
	}

    .btn-fechas:active{
		background-color: #413b3c;
        border: 4px solid #32291a;
		color: white;
	}

	.btn-comenzar:hover{
		background-color: rgb(38, 36, 24);
        border: 8px solid #322c0f;
		color: white;
	}

	.btn-comenzar:active{
		background-color: #413b3c;
        border: 8px solid #322c0f;
		color: white;
	}

	.escudo-img-sorteo{
        max-height: 40px;
        width: auto;
    }

	.texto-general-sorteo{
		color: white;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
		font-size: 12px;
	}

	.original{
        opacity: 1;
    }

	.original_grupo{
        opacity: 0;
    }

	.aparecer{
        animation: fadeIn 0.7s ease-in-out forwards;
    }

	.desaparecer{
        animation: fadeOut 0.7s ease-in-out forwards;
    }

	.contenedor-titulo-grupo{
		padding-top: 1rem;
		padding-bottom: 0.6rem;
		margin-bottom: 1.8rem;
		background-color: #000000;
	}

	.footer{
		position: absolute;
  		bottom: 0;
  		width: 100%;
  		height: auto;  
	}

	@media (max-width: 992px){
        
        .texto-general-sorteo{
			font-size: 10px;
		}

		.escudo-img-sorteo{
    	    max-height: 20px;
    	    width: auto;
    	}

        .btn-fechas{
	    	width: 60%;
            font-size: 0.5rem;
	    }

		.titulo-grupo{
            font-size: 1rem;
        }
    
    }

</style>