---
import Footer from '../components/Footer.astro';


interface Props {
    titulo: string;
}

const {titulo} = Astro.props;


---

<!DOCTYPE html>
<html lang="es-PE">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap">

	<title>{titulo}</title>
</head>
<body>
	
    <slot/>
	
	<Footer></Footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

<style is:global>

	@keyframes scale-up-center {
	  0% {
	    transform: scale(0.5);
	  }
	  100% {
	    transform: scale(1);
	  }
	}

	@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

	@keyframes fadeOut {
        from {
            opacity: 1;
        }
        to {
            opacity: 0;
        }
    }

    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    body{
        height: 100vh;
        background: #000000;
		background: radial-gradient(circle,rgba(0, 0, 0, 1) 0%, rgba(22, 20, 10, 1) 59%, rgba(15, 12, 7, 1) 100%);
    }

	input[type=number]:disabled {
		background-color: #3a4548;;
		border: 1px solid #3a4548;
    }

	.titulo-grupo{
        width: auto;
        z-index: 2;
        font-size: 1.5rem;
        color: #DFB258;
        text-shadow: 
            -1px -1px 2px rgba(198,169,116, 0.4), 
            1px 1px 2px rgba(198,169,116, 0.4);
    }

    .texto-general{
        color: white;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
    }

    .btn-comenzar{
		text-decoration: none;
		width: auto;
		padding-top: 2%;
		padding-bottom: 1.6%;
		padding-left: 5%;
		padding-right: 5%;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
		font-size: 2rem;
		background-color: #514d35;
		background-size: 100%;
		color: white;
		border-radius: 24px;
		border: 8px solid #322c0f;
		transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
	}

    .btn-fechas, .btn-general{
		width: 40%;
		padding: 2%;
		padding-top: 0.5rem;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
		font-size: 0.8rem;
		background-color: #514d35;
		background-size: 100%;
		color: white;
		border-radius: 10px;
		border: 4px solid #322c0f;
		transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
	}

    .btn-fechas:hover, .btn-general:hover{
		background-color: rgb(38, 36, 24);
        border: 4px solid #322c0f;
		color: white;
	}

    .btn-fechas:active, .btn-general:active{
		background-color: #413b3c;
        border: 4px solid #32291a;
		color: white;
	}

	.btn-general:disabled{
        border: 4px solid #2c261d;
        background-color: #1f1d1a;
        color: white;
    }

	.btn-comenzar:hover{
		background-color: rgb(38, 36, 24);
        border: 8px solid #322c0f;
		color: white;
	}

	.btn-comenzar:active{
		background-color: #413b3c;
        border: 8px solid #322c0f;
		color: white;
	}

	.btn-volver{
        position: absolute;
        max-width: 50px;
        left: 1.5rem;
        top: 1.5rem;
        transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
    }

    .btn-volver:hover{
        filter: drop-shadow( 0 0 20px #dec498);
    }

	.btn-siguiente{
		width: 50%;
		padding-top: 1rem;
        padding-bottom: 1rem;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
		font-size: 1.2rem;
		background-color: #514d35;
		background-size: 100%;
		color: white;
		border-radius: 10px;
		border: 4px solid #322c0f;
		transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
	}

	.btn-siguiente:hover{
		background-color: rgb(38, 36, 24);
        border: 4px solid #322c0f;
		color: white;
	}

	.escudo-img-sorteo{
        max-height: 40px;
        width: auto;
    }

	.texto-general-sorteo{
		color: white;
		font-family: "Bebas Neue", sans-serif;
  		font-weight: 400;
  		font-style: normal;
		font-size: 12px;
	}

	.original{
        opacity: 1;
    }

	.original_grupo{
        opacity: 0;
    }

	.aparecer{
        animation: fadeIn 0.7s ease-in-out forwards;
    }

	.desaparecer{
        animation: fadeOut 0.7s ease-in-out forwards;
    }

	.contenedor-titulo-grupo{
		padding-top: 1rem;
		padding-bottom: 0.6rem;
		margin-bottom: 1.8rem;
		background-color: #000000;
	}

	.contenedor-btn{
		margin-top: 2rem
	}

	.footer{
		position: absolute;
  		bottom: 0;
  		width: 100%;
  		height: auto;  
	}

	.titulo-pagina{
        font-size: 2rem;

    }

    .contenedor-titulo{
        padding-top: 3%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

	@media (max-width: 992px){
        
        .texto-general-sorteo{
			font-size: 10px;
		}

		.escudo-img-sorteo{
    	    max-height: 20px;
    	    width: auto;
    	}

        .btn-fechas{
	    	width: 60%;
            font-size: 0.5rem;
	    }

		.titulo-grupo{
            font-size: 1rem;
        }

		.contenedor-titulo{
			padding-top: 10%;
		}

		.contenedor-titulo-grupo{
			margin-bottom: 1rem;
		}

		.contenedor-equipo{
			margin-bottom: 0.8rem
		}

		.contenedor-btn{
			margin-top: 0.5rem;
		}

		.btn-fechas{
			padding-top: 5%;
		}

		.titulo-pagina{
            padding-top: 5%;
            font-size: 1.5rem;
        }
        
        .btn-volver{
            max-width: 25px;
        }

	}

</style>